<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context="com.example.dimassaputra.zenius.MainActivity">

    <ImageView
        android:id="@+id/logo"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_centerInParent="true"
        android:layout_alignParentTop = "true"
        android:src="@drawable/logo" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Founder : Sabda PS & Medy S"
        android:id="@+id/founder"
        android:layout_below="@id/logo" />
    <TextView
        android:id="@+id/founded"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="Founded : 7-7-2007"
        android:layout_below="@id/founder" />
    <TextView
        android:id="@+id/address1"
        android:layout_width="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_height="wrap_content"
        android:text="Headquarter :Gedung Gajah Unit ABC Lantai 5 B3"
        android:layout_below="@id/founded" />
    <TextView
        android:id="@+id/address2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="85dp"
        android:text="Jl. Dr. Saharjo Raya No. 111"
        android:layout_below="@id/address1" />
    <TextView
        android:id="@+id/address3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="82dp"
        android:text=" Jakarta Selatan, Indonesia"
        android:layout_below="@id/address2" />
    <ImageView
        android:id="@+id/facebook"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:src="@drawable/facebook"
        android:layout_marginTop="24dp"
        android:layout_below="@id/address3" />
    <ImageView
        android:id="@+id/instagram"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginTop="24dp"
        android:src="@drawable/instagram"
        android:layout_below="@id/facebook" />
    <ImageView
        android:id="@+id/twitter"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginTop="24dp"
        android:src="@drawable/twitter"
        android:layout_below="@id/instagram"/>


</RelativeLayout>
